{
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "strict": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "lib": ["ESNext", "DOM"],
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "composite": true
    },
    "include": ["./src/**/*"]
}
